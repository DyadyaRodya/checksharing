<SettingsScreen>
    name: "settings"
    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Настройки розыгрыша"

        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: root.width - dp(72)
            radius: 12
            padding: "12dp"
            md_bg_color: 1, 1, 1, .5
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                text: "Настройки:"
                font_style: "H6"
                adaptive_height: True
                halign: "center"
