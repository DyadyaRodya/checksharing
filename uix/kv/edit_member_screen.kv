<MemberScreen>
    name: "edit_member"
    on_leave: app.previous_screen = self.name

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Редактирование участника"
            left_action_items: [['arrow-left', lambda x: app.set_screen(app.previous_screen)]]

        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: root.width - dp(72)
            radius: 12
            padding: "12dp"
            md_bg_color: 1, 1, 1, .5
            pos_hint: {"center_x": .5, "center_y": .5}

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                MDBoxLayout:
                    adaptive_height: True
                    MDIconButton:
                        icon: 'account'
                        disabled: True
                    MDTextField:
                        id: name_field
                        hint_text: 'Имя'

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'
                size_hint: 1, None
                height: dp(40)
                MDFillRoundFlatIconButton:
                    id: btn_save_member
                    icon: 'check'
                    text: 'Сохранить'
                    on_release: root.save_member()