<EditBillScreen>
    name: "edit_bill"
    on_leave: app.previous_screen = self.name

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Редактирование чека"
            left_action_items: [['arrow-left', lambda x: app.set_screen(app.previous_screen)]]

        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: root.width - dp(72)
            radius: 12
            padding: "12dp"
            spacing: "12dp"
            md_bg_color: 1, 1, 1, .5
            pos_hint: {"center_x": .5, "center_y": .5}
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                height: dp(40)
                adaptive_height: True
                MDTextField:
                    id: name_field
                    icon_left: "silverware"
                    hint_text: 'Ресторан'

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                height: dp(40)
                adaptive_height: True
                MDTextField:
                    id: name_field
                    icon_left: "currency-rub"
                    hint_text: 'Сумма'

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                height: dp(40)
                MDTextField:
                    id: name_field
                    icon_left: "account"
                    hint_text: 'Имя участника'

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'

                MDFillRoundFlatIconButton:
                    id: btn_save_member
                    icon: 'check'
                    text: 'Сохранить'
                    on_release: root.save_bill()
