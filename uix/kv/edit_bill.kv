<MenuHeader>
    orientation: "vertical"
    adaptive_size: True
    padding: "4dp"

    MDBoxLayout:
        spacing: "12dp"
        adaptive_size: True

        MDIconButton:
            icon: "gesture-tap-button"
            pos_hint: {"center_y": .5}

        MDLabel:
            text: "Выбрать участника"
            adaptive_size: True
            pos_hint: {"center_y": .5}

<EditBillScreen>
    name: "edit_bill"
    on_leave: app.previous_screen = self.name

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Редактирование чека"
            left_action_items: [['arrow-left', lambda x: app.set_screen(app.previous_screen)]]

        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: root.width
            radius: 12
            padding: "12dp"
            spacing: "12dp"
            md_bg_color: 1, 1, 1, .5
            pos_hint: {"center_x": .5, "center_y": .5}
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                height: dp(40)
                adaptive_height: True
                MDTextField:
                    id: rest_name_field
                    icon_left: "silverware"
                    hint_text: 'Ресторан'

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                height: dp(40)
                adaptive_height: True
                MDTextField:
                    id: summ_field
                    input_filter: 'float'
                    icon_left: "currency-rub"
                    hint_text: 'Сумма'

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                height: dp(40)
                MDRectangleFlatButton:
                    id: mem_name_field
                    width: root.width - dp(96)
                    icon_left: "account"
                    text: 'Выбрать участника'
                    text_color: 0, 0, 1, 1
                    md_bg_color: 1, 1, 0, 1
                    on_release: root.draw_menu()

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'

                MDFillRoundFlatIconButton:
                    id: btn_save_bill
                    icon: 'check'
                    text: 'Сохранить'
                    on_release: root.save_bill()
