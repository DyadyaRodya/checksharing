<BillScreen>
    name: "bill_screen"
    on_leave: app.previous_screen = self.name

    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Чеки"
            left_action_items: [['arrow-left', lambda x: app.set_screen("room")]]

        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: root.width
            radius: 12
            padding: "12dp"
            spacing: "12dp"
            md_bg_color: 1, 1, 1, .5
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                id: prev_label
                text: "Список чеков:"
                theme_text_color: "Secondary"
                font_style: "H6"
                adaptive_height: True
                halign: "center"

            ScrollView:
                padding: "12dp"
                MDList:
                    id: bill_container

            MDFloatingActionButton:
                id: float_act_btn
                icon: 'wallet-plus'
                size_hint: None, None
                size: dp(40), dp(40)
                opposite_colors: True
                elevation_normal: 8
                pos_hint: {'center_x': .9, 'center_y': .2}
                on_release: root.manager.current = "edit_bill"
