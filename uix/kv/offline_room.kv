<OfflineRoom>
    name: "room"
    MDBoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: "Offline Room"
            right_action_items: [['tools', lambda x: app.set_screen('settings')]]

        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: None
            width: root.width - dp(72)
            radius: 12
            padding: "12dp"
            md_bg_color: 1, 1, 1, .5
            pos_hint: {"center_x": .5, "center_y": .5}

            MDLabel:
                id: prev_label
                text: "Список участников:"
                font_style: "H6"
                adaptive_height: True
                halign: "center"

            ScrollView:
                padding: "12dp"

                MDList:
                    id: member_container

            MDFloatingActionButton:
                id: float_act_btn
                icon: 'plus'
                size_hint: None, None
                size: dp(56), dp(56)
                opposite_colors: True
                elevation_normal: 8
                pos_hint: {'center_x': .9, 'center_y': .1}
                disabled: root.disabled
                on_release: root.on_press_add_member()


        MDFillRoundFlatButton:
            text: "Розыгрыш"
            on_release: root.controllers.on_tap_button_start()
            pos_hint: {"center_x": .5, "center_y": .1}
